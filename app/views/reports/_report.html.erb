<div id="report_wrapper">
  <ul id="<%= dom_id(report) %>" class="hentry report">
    <li class="timestamp">    
       <% if report.source=="Twitter" %>
     	  <a href="http://twitter.com/<%=report.reporter.screen_name%>/statuses/<%=report.uniqueid%>">
     	    <%=time_ago_in_words(report.created_at)%> <span class="ago">ago</span>
     	  </a> 
   	  <% else %>  	
         <abbr class="published" title="<%= report.created_at.iso8601 %>">
           <%=time_ago_in_words(report.created_at)%>
         </abbr> 
         <span class="ago">ago</span>
   	  <% end %>
   	</li>
	  <% if report.source=="Twitter" %>
  	<%= link_to image_tag(report.reporter.icon || "", :class => "profile", :target=>"new"), report.reporter.profile || "" %>
  	<% else %>
    <img src="<%=report.reporter.icon%>" class="profile">
  	<% end %>
    <span class="vcard author" id="screen_name"><%=report.reporter.display_name%></span>: 
    <span class="entry-title"><%=report.display_text%></span> 
    <%= report.title+'<br/>' if report.title %>
	  
    
      <%= "<span class=\"adr\">#{report.location.address}</span>" if report.location %> 
        <li class="source">
          <span class="via">via</span> 
          <span class="sourcename"><%=report.reporter.source_name%></span>
        </li>
	
    	<%= report.media_link %>
	
      <%- report.tags.each do |tag| %>
        <li class="tag"> <%= tag.description.to_s %></li>
      <%- end %>
  
      <%- unless report.location.nil? %>
        <li class="location tag"><%= report.location.address %></li>
      <%- end %>

      <%- if report.is_a?(AudioReport) %>
        <li><span class="audioreport">Listen to this audio report:</span><%= audio_link(report) %></li>
      <%- end %>  
    </ul>

  <div class="markup_pane container">
    <%= link_to_remote content_tag(:span, 'Adjust'), { :url => edit_report_path(report), :method => :get }, :class => "button" %>
    <%= link_to_remote content_tag(:span, 'Dismiss'), { :url => dismiss_report_path(report), :method => :post }, :class => "button" %>
    <%= link_to_remote content_tag(:span, 'Confirm'), { :url => confirm_report_path(report), :method => :post }, :class => "button" %>
    <%= link_to_remote content_tag(:span, 'Mark as chatter'), { :with => "'report[is_chatter]=1'", :url => dismiss_report_path(report), :method => :post }, :class => "button"%>
  </div>
</div>